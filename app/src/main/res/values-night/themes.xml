<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Omoir" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_color_blue</item>
        <item name="colorPrimaryVariant">@color/brand_color_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimarySurface">@color/grey_white</item>
        <item name="colorOnPrimaryContainer">?attr/colorOnPrimary</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Omoir.BottomSheetDialog</item>
        <item name="spark_SparkViewStyle">@style/SparkViewStyle</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_color_accent_3</item>
        <item name="colorSecondaryVariant">@color/brand_color_accent_2</item>
        <item name="colorOnSecondary">@color/brand_color_accent_1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="OmoirModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_rounded_bottom_sheet_background</item>
    </style>

    <style name="Theme.Omoir.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeOverlay.Omoir.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MaterialComponents.BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/OmoirModalStyle</item>
    </style>

    <style name="Theme.Omoir.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Omoir.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SparkViewStyle" parent="spark_SparkView">
        <item name="spark_lineColor">@color/title_text_color</item>
        <item name="spark_lineWidth">@dimen/spark_line_width</item>
        <item name="spark_cornerRadius">@dimen/spark_line_radius</item>
        <item name="spark_fill">false</item>

        <item name="spark_baseLineColor">@color/title_text_color</item>
        <item name="spark_baseLineWidth">@dimen/spark_line_width</item>

        <item name="spark_scrubLineColor">@color/subtitle_text_color</item>
        <item name="spark_scrubLineWidth">@dimen/spark_scrub_line_width</item>
        <item name="spark_scrubEnabled">true</item>

        <item name="spark_animateChanges">true</item>
    </style>
</resources>