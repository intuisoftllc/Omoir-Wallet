<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Plaid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_color_blue</item>
        <item name="colorPrimaryVariant">@color/brand_color_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimarySurface">@color/grey_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_color_accent_3</item>
        <item name="colorSecondaryVariant">@color/brand_color_accent_2</item>
        <item name="colorOnSecondary">@color/brand_color_accent_1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Plaid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Plaid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Plaid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>