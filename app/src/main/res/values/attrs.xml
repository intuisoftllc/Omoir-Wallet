<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RoundedButtonView">
        <attr name="btn_text" format="string"/>
        <attr name="text_all_caps" format="boolean"/>
        <attr name="right_icon" format="reference"/>
        <attr name="text_size" format="integer"/>
        <attr name="button_padding" format="dimension"/>
        <attr name="button_tint" format="color"/>

        <attr name="text_position">
            <flag name="center" value="0" />
            <flag name="left" value="1" />
            <flag name="right" value="2" />
        </attr>

        <attr name="button_style">
            <flag name="none" value="0" />
            <flag name="rounded" value="1" />
            <flag name="outlined" value="2" />
            <flag name="pill" value="4" />
            <flag name="transparent" value="8" />
        </attr>
    </declare-styleable>


    <declare-styleable name="PasscodeView">
        <attr name="passcodeViewType" format="enum">
            <enum name="set_passcode" value="0"/>
            <enum name="check_passcode" value="1"/>
        </attr>
        <attr name="normalStateColor" format="color"/>
        <attr name="correctStateColor" format="color"/>
        <attr name="wrongStateColor" format="color"/>
        <attr name="numberTextColor" format="color"/>
        <attr name="passcodeLength" format="integer"/>
        <attr name="firstInputTip" format="string"/>
        <attr name="trackIncorrectAttempts" format="boolean"/>
        <attr name="tipTextColor" format="color"/>
        <attr name="secondInputTip" format="string"/>
        <attr name="wrongLengthTip" format="string"/>
        <attr name="wrongInputTip" format="string"/>
        <attr name="correctInputTip" format="string"/>
    </declare-styleable>


    <declare-styleable name="SettingsItemView">
        <attr name="title_text_color" format="color"/>
        <attr name="subtitle_text_color" format="color"/>
        <attr name="item_title" format="string"/>
        <attr name="item_subtitle" format="string"/>
        <attr name="elipsize_subtitle" format="boolean"/>
        <attr name="max_lines_subtitle" format="integer"/>
        <attr name="subtitle_icon" format="reference"/>
        <attr name="show_switch" format="boolean"/>
        <attr name="show_copy" format="boolean"/>
        <attr name="show_check" format="boolean"/>
        <attr name="show_chevron" format="boolean"/>
        <attr name="show_radio" format="boolean"/>


        <attr name="settings_variant">
            <flag name="card" value="0" />
            <flag name="normal" value="1" />
            <flag name="radio" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TopBarView">
        <attr name="top_bar_variant">
            <flag name="no_bar" value="0" />
            <flag name="left_align" value="1" />
            <flag name="center_align" value="2" />
            <flag name="center_align_white" value="4" />
        </attr>
        <attr name="primary_text" format="string"/>
        <attr name="secondary_text" format="string"/>
        <attr name="right_action" format="reference"/>
        <attr name="left_action" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SwapPairItemView">
        <attr name="preview_item" format="boolean"/>
        <attr name="pair_preview">
            <flag name="enter_value_variant_1" value="0" />
            <flag name="enter_value_variant_2" value="1" />
            <flag name="show_value_variant_1" value="2" />
            <flag name="show_value_variant_2" value="4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BottomBarView">
        <attr name="item_1_text" format="string"/>
        <attr name="item_1_icon_unselected" format="reference"/>
        <attr name="item_1_icon_selected" format="reference"/>
        <attr name="item_2_text" format="string"/>
        <attr name="item_2_icon_unselected" format="reference"/>
        <attr name="item_2_icon_selected" format="reference"/>
        <attr name="item_3_icon_unselected" format="reference"/>
        <attr name="item_3_icon_selected" format="reference"/>
        <attr name="item_4_text" format="string"/>
        <attr name="item_4_icon_unselected" format="reference"/>
        <attr name="item_4_icon_selected" format="reference"/>
        <attr name="item_5_text" format="string"/>
        <attr name="item_5_icon_unselected" format="reference"/>
        <attr name="item_5_icon_selected" format="reference"/>

        <attr name="item_text_color_selected" format="color"/>
        <attr name="item_text_color_unselected" format="color"/>
    </declare-styleable>


    <declare-styleable name="ChartTimePeriodIndicatorView">
        <attr name="time_period_text" format="string"/>
        <attr name="is_selected" format="boolean"/>
    </declare-styleable>
</resources>