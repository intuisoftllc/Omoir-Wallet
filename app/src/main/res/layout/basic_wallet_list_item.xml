<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/walletContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintHorizontal_bias="0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:minHeight="100dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/walletTypeImg"
                android:src="@drawable/ic_baseline_wallet_32"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/moreDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="more details"
                style="@style/Subtitle"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/alt_black"
                android:drawableRight="@drawable/ic_black_chevron_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/walletName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Test wallet for a really long name"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/alt_black"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintEnd_toStartOf="@+id/moreDetails"
                app:layout_constraintStart_toEndOf="@id/walletTypeImg"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/H4.Bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125.5 Mil Sats"
                style="@style/H4"
                android:id="@+id/walletBalance"
                app:layout_constraintVertical_bias="0"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/walletName"
                app:layout_constraintTop_toBottomOf="@+id/walletName"
                android:layout_marginTop="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>