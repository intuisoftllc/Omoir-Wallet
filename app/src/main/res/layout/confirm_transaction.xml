<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/feeTypeContainer">


                <TextView
                    android:id="@+id/advancedOptionsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/H4.Bold"
                    android:layout_marginBottom="15dp"
                    android:text="Confirm Transaction"
                    android:layout_gravity="center"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note, this will spend your full balance!"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/H7"
                    android:visibility="gone"
                    android:id="@+id/fullBalaceNotice"
                    android:textColor="@color/error_color"/>

                <com.intuisoft.plaid.androidwrappers.SettingsItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_title="Raw Transaction"
                    android:id="@+id/rawTransaction"
                    app:show_copy="true"
                    app:elipsize_subtitle="true"
                    app:max_lines_subtitle="2"
                    android:layout_marginVertical="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feeContainer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:show_switch="false"/>

                <com.intuisoft.plaid.androidwrappers.SettingsItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_title="Transaction Id"
                    android:id="@+id/transactionId"
                    app:show_copy="true"
                    app:elipsize_subtitle="true"
                    app:max_lines_subtitle="2"
                    android:layout_marginVertical="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feeContainer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:show_switch="false"/>

                <com.intuisoft.plaid.androidwrappers.SettingsItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_title="Sending To"
                    android:id="@+id/sendingTo"
                    android:layout_marginVertical="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feeContainer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:show_switch="false"/>

                <com.intuisoft.plaid.androidwrappers.SettingsItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_title="Amount"
                    android:id="@+id/txAmount"
                    android:layout_marginVertical="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feeContainer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:show_switch="false"/>

                <com.intuisoft.plaid.androidwrappers.SettingsItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_title="Fee"
                    android:id="@+id/feeAmount"
                    android:layout_marginVertical="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feeContainer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:show_switch="false"/>

                <com.intuisoft.plaid.androidwrappers.SettingsItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_title="Fee Rate"
                    android:id="@+id/feeRate"
                    android:layout_marginVertical="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feeContainer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:show_switch="false"/>

                <com.intuisoft.plaid.androidwrappers.RoundedButtonView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/broadcastTransaction"
                    app:btn_text="Send"
                    app:text_position="center"
                    app:button_style="rounded"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="35dp"
                    app:layout_constraintTop_toBottomOf="@+id/description_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.intuisoft.plaid.androidwrappers.RoundedButtonView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cancel"
                    app:btn_text="Cancel"
                    app:text_position="center"
                    app:button_style="outlined"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="35dp"
                    app:layout_constraintTop_toBottomOf="@+id/description_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>