<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viridian"
    android:padding="20dp">


    <ImageView
        android:id="@+id/check"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:alpha="0"
        android:scaleX="0"
        android:scaleY="0"
        android:src="@drawable/ic_check_bold_white_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/all_set_message"
        style="@style/H2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your All Set!"
        android:layout_marginTop="150dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/all_set_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Subtitle"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/all_set_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Congratulations on taking the first step towards your financial sovernty.\n\nPlaid Crypto Walletâ„¢ gives you the tools you need to take your cryptocurrency journey to the next level. Get started by creating a new wallet or navigating to the main screen."/>

    <com.intuisoft.plaid.androidwrappers.RoundedButtonView
        android:id="@+id/createWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:btn_text="Create New Wallet"
        app:button_style="rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/all_set_description"
        android:layout_marginTop="40dp"
        app:text_position="center"/>

    <com.intuisoft.plaid.androidwrappers.RoundedButtonView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:btn_text="Go to Homescreen"
        app:button_style="white-rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createWallet"
        android:layout_marginTop="5dp"
        app:text_position="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>