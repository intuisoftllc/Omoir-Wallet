<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/horizontal_padding_size"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/import_wallet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/import_wallet_option_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="@dimen/vertical_bias_10"
        android:layout_marginTop="@dimen/horizontal_padding_size_large"
        android:gravity="center"
        style="@style/TextStyle.Semibold.24"
        android:textColor="?attr/colorPrimaryVariant"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/import_wallet_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/horizontal_padding_size_large"
        android:text="@string/import_wallet_option_2_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/import_wallet_title"
        android:layout_marginTop="@dimen/margin_24"
        style="@style/TextStyle.Regular.16"
        android:textColor="@color/text_grey"
        android:textStyle="bold"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/import_wallet_description"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_64"
        android:layout_marginBottom="@dimen/horizontal_padding_size_large"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:layout_marginHorizontal="@dimen/margin_20"
        app:layout_constraintVertical_bias="@dimen/vertical_bias_15">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/public_key"
                    style="@style/TextStyle.Medium.14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="@dimen/margin_8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:hint="@string/import_wallet_public_key_suggestion"
                    android:maxLines="1"
                    android:padding="@dimen/horizontal_padding_size"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:textColorHint="@color/color_disabled"
                    android:textSize="14sp"
                    tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />
            </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/import_wallet_public_key_text_box_title"
        style="@style/TextStyle.Semibold.12"
        app:layout_constraintStart_toStartOf="@id/name_container"
        app:layout_constraintBottom_toTopOf="@id/name_container"
        android:layout_marginBottom="@dimen/horizontal_padding_size"/>


    <com.intuisoft.plaid.androidwrappers.RoundedButtonView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:text_position="center"
        app:button_style="outlined"
        android:id="@+id/scan"
        app:btn_text="@string/scan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/parent_bottom_margin"
        android:layout_marginHorizontal="@dimen/horizontal_padding_size_large"/>

    <com.intuisoft.plaid.androidwrappers.RoundedButtonView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:text_position="center"
        app:button_style="rounded"
        app:btn_text="@string/import_word"
        android:id="@+id/import_key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scan"
        android:layout_marginBottom="@dimen/horizontal_padding_size"
        android:layout_marginHorizontal="@dimen/horizontal_padding_size_large"/>

</androidx.constraintlayout.widget.ConstraintLayout>