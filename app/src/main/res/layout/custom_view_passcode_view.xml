<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_circle_background">

        <ImageView
            android:id="@+id/iv_lock"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_lock"/>

        <ImageView
            android:id="@+id/iv_ok"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:alpha="0"
            android:scaleX="0"
            android:scaleY="0"
            app:srcCompat="@drawable/ic_check_bold"
            app:tint="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_input_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:letterSpacing="0.02"
        android:textSize="16sp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="32dp">

        <View
            android:id="@+id/cursor"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/subtitle_text_color"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/layout_psd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="true"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="vertical"
        android:paddingStart="38dp"
        android:paddingEnd="38dp"
        android:weightSum="4"
        android:clickable="true"
        android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="@dimen/pin_number_size"
                    android:layout_height="@dimen/pin_number_size"
                    android:id="@+id/number1"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_10"
                    style="@style/NumberInPasscode"
                    android:layout_alignParentLeft="true"
                    android:text="1"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="@dimen/pin_number_size"
                    android:layout_height="@dimen/pin_number_size"
                    android:id="@+id/number2"
                    style="@style/NumberInPasscode"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_10"
                    android:layout_centerHorizontal="true"
                    android:text="2"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="@dimen/pin_number_size"
                    android:layout_height="@dimen/pin_number_size"
                    android:id="@+id/number3"
                    style="@style/NumberInPasscode"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_10"
                    android:layout_alignParentRight="true"
                    android:text="3"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="@dimen/pin_number_size"
                    android:layout_height="@dimen/pin_number_size"
                    android:id="@+id/number4"
                    style="@style/NumberInPasscode"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_10"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/number1"
                    android:text="4"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="@dimen/pin_number_size"
                    android:layout_height="@dimen/pin_number_size"
                    android:id="@+id/number5"
                    style="@style/NumberInPasscode"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_10"
                    android:layout_below="@id/number1"
                    android:layout_centerHorizontal="true"
                    android:text="5"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="@dimen/pin_number_size"
                    android:layout_height="@dimen/pin_number_size"
                    android:id="@+id/number6"
                    style="@style/NumberInPasscode"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_10"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/number1"
                    android:text="6"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="@dimen/pin_number_size"
                    android:layout_height="@dimen/pin_number_size"
                    android:id="@+id/number7"
                    style="@style/NumberInPasscode"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_10"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/number4"
                    android:text="7"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="@dimen/pin_number_size"
                    android:layout_height="@dimen/pin_number_size"
                    android:id="@+id/number8"
                    style="@style/NumberInPasscode"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_10"
                    android:layout_below="@id/number4"
                    android:layout_centerHorizontal="true"
                    android:text="8"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="@dimen/pin_number_size"
                    android:layout_height="@dimen/pin_number_size"
                    android:id="@+id/number9"
                    style="@style/NumberInPasscode"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_10"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/number4"
                    android:text="9"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/pin_number_size"
                    android:layout_height="@dimen/pin_number_size"
                    android:id="@+id/numberB"
                    style="@style/NumberInPasscode"
                    android:layout_below="@id/number7"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_10"
                    app:srcCompat="@drawable/ic_arrow_left"
                    app:tint="#FF8A8A8A" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="@dimen/pin_number_size"
                    android:layout_height="@dimen/pin_number_size"
                    android:id="@+id/number0"
                    style="@style/NumberInPasscode"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_10"
                    android:layout_below="@id/number7"
                    android:layout_centerHorizontal="true"
                    android:text="0" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="@dimen/pin_number_size"
                    android:layout_height="@dimen/pin_number_size"
                    android:id="@+id/numberOK"
                    style="@style/NumberInPasscode"
                    android:layout_below="@id/number7"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_10"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_check"
                    app:tint="#FF8A8A8A" />
            </LinearLayout>

        <ImageView
            android:id="@+id/fingerprintIcon"
            android:layout_width="@dimen/pin_number_size"
            android:layout_height="@dimen/pin_number_size"
            android:layout_below="@+id/number0"
            android:layout_alignStart="@+id/number0"
            android:layout_alignEnd="@+id/number0"
            android:src="@drawable/ic_fingerprint"
            android:clickable="true"
            android:visibility="gone"
            android:layout_gravity="center"
            android:background="?android:selectableItemBackground"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/margin_10"
            android:focusable="true" />
    </LinearLayout>

</LinearLayout>