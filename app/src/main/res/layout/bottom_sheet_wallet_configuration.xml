<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20sp"
        android:paddingTop="20dp"
        android:paddingBottom="0dp"
        android:paddingVertical="40dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bottom_sheet_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/create_wallet_configuration_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/TextStyle.Semibold.24"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimaryVariant"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.intuisoft.plaid.androidwrappers.SettingsItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_title="@string/create_wallet_configuration_item_1_title"
            app:item_subtitle="Main Net"
            android:id="@+id/network"
            android:layout_marginTop="@dimen/horizontal_padding_size"
            app:show_chevron="true"
            app:show_switch="false"/>

        <com.intuisoft.plaid.androidwrappers.SettingsItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_title="@string/create_wallet_configuration_item_2_title"
            android:layout_marginTop="@dimen/horizontal_padding_size"
            android:id="@+id/gap_limit"
            app:show_chevron="true"
            app:show_switch="false"/>

        <com.intuisoft.plaid.androidwrappers.SettingsItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_title="@string/create_wallet_configuration_item_3_title"
            android:id="@+id/bip"
            android:layout_marginTop="@dimen/horizontal_padding_size"
            app:show_chevron="true"
            app:show_switch="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/horizontal_padding_size"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seed_or_key_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/create_wallet_configuration_item_seed_title"/>

            <ImageView
                android:id="@+id/show_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_eye_closed"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/seed_or_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="****"
            android:layout_marginTop="@dimen/margin_6"
            style="@style/TextStyle.Semibold.16"
            android:textStyle="bold"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>