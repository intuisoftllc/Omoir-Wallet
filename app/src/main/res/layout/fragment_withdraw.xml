<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginHorizontal="15dp">

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/sendBTC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/H4.Bold"
        android:text="Send BTC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/close"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/availableBalanceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/sendBTC"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Available Balance"
        android:textColor="@color/alt_black"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/balance"
        app:layout_constraintStart_toEndOf="@+id/availableBalanceTitle"
        app:layout_constraintTop_toTopOf="@+id/availableBalanceTitle"
        app:layout_constraintBottom_toBottomOf="@+id/availableBalanceTitle"
        android:text="0 Sats"
        android:layout_marginStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/display_unit"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/amountContainer"
        app:layout_constraintTop_toBottomOf="@+id/addressContainer"
        android:layout_marginBottom="10dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addressContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/display_unit"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/availableBalanceTitle">

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Address"
            android:inputType="text"
            android:maxLines="1"
            android:lineHeight="18dp"
            android:paddingStart="0dp"
            android:textSize="@dimen/edit_text_text_size_small" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amountContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/display_unit"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/addressContainer">

        <EditText
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Amount"
            android:inputType="text"
            android:maxLines="1"
            android:lineHeight="18dp"
            android:digits="1234567890."
            android:paddingStart="0dp"
            android:textSize="@dimen/edit_text_text_size_small" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/currencyAndFeeContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/amountContainer"
        app:layout_constraintTop_toBottomOf="@+id/amountContainer"
        app:layout_constraintStart_toStartOf="@+id/amountContainer"
        android:layout_marginTop="15dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/currencyAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight=".4"
            android:layout_marginRight="10dp"
            tools:text="$ 500.46"/>

        <TextView
            android:id="@+id/transactionFee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight=".6"
            android:layout_gravity="end"
            android:gravity="end"
            tools:text="Fee: 1,460 Sats"/>
    </LinearLayout>

    <com.intuisoft.plaid.androidwrappers.RoundedButtonView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:btn_text="Next"
        app:text_position="center"
        app:button_style="rounded"
        android:id="@+id/nextButton"
        android:layout_marginHorizontal="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@+id/amountContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.intuisoft.plaid.androidwrappers.RoundedButtonView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:btn_text="Scan"
        app:text_position="center"
        app:button_style="white-rounded"
        android:id="@+id/scanButton"
        android:layout_marginHorizontal="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/nextButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <com.intuisoft.plaid.androidwrappers.SettingsItemView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:item_subtitle="Advanced Options"
        app:show_chevron="true"
        android:id="@+id/advancedOptions"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>