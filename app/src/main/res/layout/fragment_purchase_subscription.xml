<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.intuisoft.plaid.androidwrappers.RoundedButtonView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:text_position="center"
        app:btn_text="@string/premium_subscriptions_subscribe"
        app:button_style="rounded"
        android:id="@+id/subscribe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/parent_bottom_margin"
        android:layout_marginHorizontal="50dp"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/subscribe"
        android:layout_marginBottom="@dimen/margin_8">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">
                <androidx.cardview.widget.CardView
                    android:id="@+id/benifits_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="@dimen/horizontal_padding_size"
                    app:cardCornerRadius="4dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/card_background_color"
                    app:layout_constraintHorizontal_bias="0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextStyle.Semibold.12"
                            android:textColor="@color/settings_category_text_color"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/horizontal_padding_size"
                            android:text="@string/premium_subscriptions_benefits_title"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/premium_subscriptions_benefits_1"
                            style="@style/TextStyle.Medium.16"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/horizontal_padding_size"
                            android:textColor="@color/subtitle_text_color"
                            android:drawableStart="@drawable/ic_check_small"
                            android:drawablePadding="@dimen/margin_8"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/premium_subscriptions_benefits_2"
                            style="@style/TextStyle.Medium.16"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/horizontal_padding_size"
                            android:textColor="@color/subtitle_text_color"
                            android:drawableStart="@drawable/ic_check_small"
                            android:drawablePadding="@dimen/margin_8"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/premium_subscriptions_benefits_3"
                            style="@style/TextStyle.Medium.16"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/horizontal_padding_size"
                            android:textColor="@color/subtitle_text_color"
                            android:drawableStart="@drawable/ic_check_small"
                            android:drawablePadding="@dimen/margin_8"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/horizontal_padding_size">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/premium_subscriptions_benefits_4"
                                style="@style/TextStyle.Medium.16"
                                android:textStyle="bold"
                                android:layout_marginRight="@dimen/margin_10"
                                android:textColor="@color/subtitle_text_color"
                                android:drawableStart="@drawable/ic_check_small"
                                android:drawablePadding="@dimen/margin_8"/>

                            <ImageView
                                android:id="@+id/atp_more_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_more_info"
                                app:tint="@color/title_text_color" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/premium_subscriptions_benefits_5"
                            style="@style/TextStyle.Medium.16"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/horizontal_padding_size"
                            android:textColor="@color/subtitle_text_color"
                            android:drawableStart="@drawable/ic_check_small"
                            android:drawablePadding="@dimen/margin_8"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/premium_subscriptions_benefits_6"
                            style="@style/TextStyle.Medium.16"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/horizontal_padding_size"
                            android:textColor="@color/subtitle_text_color"
                            android:drawableStart="@drawable/ic_check_small"
                            android:drawablePadding="@dimen/margin_8"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/premium_subscriptions_benefits_7"
                            style="@style/TextStyle.Medium.16"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/horizontal_padding_size"
                            android:textColor="@color/subtitle_text_color"
                            android:drawableStart="@drawable/ic_check_small"
                            android:drawablePadding="@dimen/margin_8"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/premium_subscriptions_benefits_8"
                            style="@style/TextStyle.Medium.16"
                            android:textStyle="bold"
                            android:textColor="@color/subtitle_text_color"
                            android:drawableStart="@drawable/ic_check_small"
                            android:drawablePadding="@dimen/margin_8"/>

                    </LinearLayout>

                    </androidx.cardview.widget.CardView>

            <ProgressBar
                android:id="@+id/restore_loader"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/margin_10"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/benifits_container"/>
            <TextView
                android:id="@+id/restore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/premium_subscriptions_restore"
                style="@style/TextStyle.Medium.16"
                android:layout_marginTop="@dimen/margin_10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/benifits_container"
                android:textColor="@color/homescreen_wallet_status_color"/>

            <TextView
                android:id="@+id/pricing_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/premium_subscriptions_pricing_title"
                style="@style/TextStyle.Semibold.24"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/restore"
                android:textColor="@color/homescreen_wallet_status_color"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/benefit_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pricing_title"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/horizontal_padding_size"
                app:cardCornerRadius="4dp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/horizontal_padding_size"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/card_background_color"
                app:layout_constraintHorizontal_bias="0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <com.intuisoft.plaid.androidwrappers.SettingsItemView
                    android:id="@+id/option_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:settings_variant="normal"
                    app:title_text_color="@color/subtitle_text_color"
                    app:layout_constraintTop_toBottomOf="@id/security"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:item_title="@string/premium_subscription_type_yearly"
                    app:show_radio="true"/>

                <TextView
                    android:id="@+id/annual_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="$42.99/year"
                    style="@style/TextStyle.Semibold.22"
                    android:textStyle="bold"
                    android:textColor="@color/subtitle_text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                            <TextView
                                android:id="@+id/annual_monthly_conversion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/TextStyle.Medium.16"
                                android:layout_weight="1"
                                tools:text="or ~3.59/month"/>

                        <TextView
                            android:id="@+id/save_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_subscription_save_tag"
                            android:paddingVertical="@dimen/margin_6"
                            android:paddingHorizontal="@dimen/margin_12"
                            android:textColor="@color/homescreen_wallet_status_color"
                            style="@style/TextStyle.Medium.16"
                            android:textStyle="bold"
                            tools:text="Save 18%"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/benefit_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/benefit_1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/horizontal_padding_size"
                app:cardCornerRadius="4dp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/horizontal_padding_size"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:backgroundTint="@color/card_background_color"
                app:layout_constraintHorizontal_bias="0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.intuisoft.plaid.androidwrappers.SettingsItemView
                        android:id="@+id/option_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:settings_variant="normal"
                        app:title_text_color="@color/subtitle_text_color"
                        app:layout_constraintTop_toBottomOf="@id/security"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:item_title="@string/premium_subscription_type_monthly"
                        app:show_radio="true"/>

                    <TextView
                        android:id="@+id/monthly_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="$4.49/month"
                        style="@style/TextStyle.Semibold.22"
                        android:textStyle="bold"
                        android:textColor="@color/subtitle_text_color"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pricing_title"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/horizontal_padding_size"
                android:layout_marginBottom="@dimen/horizontal_padding_size"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>