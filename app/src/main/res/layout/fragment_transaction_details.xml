<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_32"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/trasactionScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction Details"
        style="@style/H4.Bold"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/close"
        android:textColor="@color/black"/>


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/trasactionScreenTitle"
        app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.intuisoft.plaid.androidwrappers.SettingsItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_title="Transaction Type"
                    app:item_subtitle="Incoming"
                    app:subtitle_icon="@drawable/ic_send_coins_48"
                    app:show_switch="false"
                    android:clickable="true"
                    android:paddingVertical="10dp"
                    android:id="@+id/transactionType"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    android:focusable="true" />

                <com.intuisoft.plaid.androidwrappers.SettingsItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_title="Amount"
                    app:item_subtitle="0.000463 BTC"
                    app:show_switch="false"
                    android:clickable="true"
                    android:paddingVertical="10dp"
                    android:id="@+id/amount"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    android:focusable="true" />



                <com.intuisoft.plaid.androidwrappers.SettingsItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_title="Inputs"
                    app:item_subtitle="2 Inputs"
                    app:show_switch="false"
                    android:clickable="true"
                    android:paddingVertical="10dp"
                    android:id="@+id/inputs"
                    app:show_chevron="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    android:focusable="true" />


                <com.intuisoft.plaid.androidwrappers.SettingsItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_title="Outputs"
                    app:item_subtitle="1 Output"
                    app:show_switch="false"
                    android:clickable="true"
                    android:paddingVertical="10dp"
                    android:id="@+id/outputs"
                    app:show_chevron="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    android:focusable="true" />

                <com.intuisoft.plaid.androidwrappers.SettingsItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_title="Transaction Date"
                    app:item_subtitle="Oct 7, 2022 9:32 AM"
                    app:show_switch="false"
                    android:clickable="true"
                    android:paddingVertical="10dp"
                    android:id="@+id/transactionDate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    android:focusable="true" />

                <com.intuisoft.plaid.androidwrappers.SettingsItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_title="Fee"
                    app:item_subtitle="N/A"
                    app:show_switch="false"
                    android:clickable="true"
                    android:paddingVertical="10dp"
                    android:id="@+id/transactionFee"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    android:focusable="true" />

                <com.intuisoft.plaid.androidwrappers.SettingsItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_title="Transaction ID"
                    app:item_subtitle="efgued5d4fb6b4ddh88fb69efb4f"
                    app:show_switch="false"
                    android:clickable="true"
                    android:paddingVertical="10dp"
                    android:id="@+id/transactionId"
                    app:show_copy="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    android:focusable="true" />

                <com.intuisoft.plaid.androidwrappers.SettingsItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_title="Status"
                    app:item_subtitle="Pending"
                    app:show_switch="false"
                    android:clickable="true"
                    android:paddingVertical="10dp"
                    android:id="@+id/transactionStatus"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    android:focusable="true" />

                <com.intuisoft.plaid.androidwrappers.RoundedButtonView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:btn_text="View on blockchain.com"
                    app:button_style="rounded"
                    app:text_position="center"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="15dp"/>

                <com.intuisoft.plaid.androidwrappers.RoundedButtonView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:btn_text="Share"
                    app:button_style="outlined"
                    app:text_position="center"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>