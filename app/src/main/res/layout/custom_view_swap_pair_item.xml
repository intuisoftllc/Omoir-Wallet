<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/swap_pair_variant_enter_value_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/horizontal_padding_size">

        <TextView
            android:id="@+id/send_get_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Send Bitcoin"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/text_grey"
            style="@style/TextStyle.Semibold.12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/send_get_title"
            android:layout_marginTop="@dimen/parent_top_margin_xsmall"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ticker_symbol_1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="@dimen/margin_8"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_bitcoin"/>

            <TextView
                android:id="@+id/ticker_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BTC"/>




            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/welcome_message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardCornerRadius="@dimen/card_corner_radius"
                android:layout_weight="1.5"
                android:layout_marginHorizontal="@dimen/margin_20"
                app:layout_constraintVertical_bias="0.25">

                <EditText
                    android:id="@+id/enter_pair_value_1"
                    style="@style/TextStyle.Medium.14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="@string/swap_enter_btc_hint"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:gravity="end"
                    android:padding="@dimen/horizontal_padding_size"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/color_disabled"
                    android:textSize="14sp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/swap_pair_variant_enter_value_2"
        android:layout_marginHorizontal="@dimen/horizontal_padding_size">

            <TextView
                android:id="@+id/send_get_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You Send Bitcoin"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/text_grey"
                style="@style/TextStyle.Semibold.12"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/send_get_title2"
                android:layout_marginTop="@dimen/parent_top_margin_xsmall"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/swap_pair_ticker_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="?android:selectableItemBackground"
                    android:paddingVertical="@dimen/margin_8"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ticker_symbol_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="@dimen/margin_8"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_bitcoin"/>

                    <TextView
                        android:id="@+id/ticker_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/horizontal_padding_size"
                        android:text="BTC"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="@dimen/margin_8"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_chevron_right"/>
                </LinearLayout>


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight=".4"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/welcome_message"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    android:layout_weight="1.5"
                    android:layout_marginHorizontal="@dimen/margin_20"
                    app:layout_constraintVertical_bias="0.25">

                    <EditText
                        android:id="@+id/enter_pair_value_2"
                        style="@style/TextStyle.Medium.14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="@string/swap_enter_btc_hint"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:gravity="end"
                        android:padding="@dimen/horizontal_padding_size"
                        android:inputType="numberDecimal"
                        android:textColorHint="@color/color_disabled"
                        android:textSize="14sp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/swap_pair_variant_show_value_1"
        android:layout_marginHorizontal="@dimen/horizontal_padding_size">

        <TextView
            android:id="@+id/send_get_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Send Bitcoin"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/text_grey"
            style="@style/TextStyle.Semibold.12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/send_get_title3"
            android:layout_marginTop="@dimen/parent_top_margin_xsmall"
            android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/swap_pair_ticker_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/margin_8"
            android:background="?android:selectableItemBackground"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ticker_symbol_3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="@dimen/margin_8"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_bitcoin"/>

            <TextView
                android:id="@+id/ticker_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/horizontal_padding_size"
                android:text="BTC"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="@dimen/margin_8"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_chevron_right"/>
        </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight=".5"/>

            <TextView
                android:id="@+id/pair_value_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="~4.28473939"
                android:gravity="end"
                android:textColor="@color/text_grey"
                android:textStyle="bold"
                style="@style/TextStyle.Medium.16"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/swap_pair_variant_show_value_2"
        android:layout_marginHorizontal="@dimen/horizontal_padding_size">

        <TextView
            android:id="@+id/send_get_title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Send Bitcoin"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/text_grey"
            style="@style/TextStyle.Semibold.12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/send_get_title4"
            android:layout_marginTop="@dimen/parent_top_margin_xsmall"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ticker_symbol_4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="@dimen/margin_8"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_bitcoin"/>

            <TextView
                android:id="@+id/ticker_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/horizontal_padding_size"
                android:text="BTC"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/pair_value_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="~4.28473939"
                android:gravity="end"
                android:textColor="@color/text_grey"
                android:textStyle="bold"
                style="@style/TextStyle.Medium.16"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>